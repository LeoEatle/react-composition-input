{
  "env": {
    "browser": true,
    "node": true,
    "commonjs": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "indent": ["error", 4, { "SwitchCase": 1 }],
    "semi": 0,
    "no-console": 0,
    "no-unused-vars": [1, {"args": "none", "varsIgnorePattern": "React|Preact|Root|h"}]
  },
  "globals": {
        "React": true,
        "ReactDOM": true
    }
}